@model IEnumerable<inandout.Models.ExpensesCategory>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ExpensesCategory" asp-action="Create" class="btn btn-primary">Create new Items</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>category Name</th>
                   


                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td width="30%">@item.CatName</td>
                    
        <td width="40%">
            <div class="w-100 btn-group " role="group">
                <a asp-controller="ExpensesCategory" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary mx-1">Update</a>
                <a asp-controller="ExpensesCategory" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-1">Delete</a>
            </div>

        </td>
                    


                </tr>
                }
            </tbody>

        </table>


    }
    else
    {
        <p>No Items created yet</p>
    }

</div>